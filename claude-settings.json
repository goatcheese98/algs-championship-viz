{
  "hooks": {
    "user-prompt-submit-hook": "./permission-notification-hook.sh"
  },
  "description": "Claude Code settings with permission notification hook",
  "hookSettings": {
    "permissionNotification": {
      "enabled": true,
      "soundEnabled": true,
      "ttsEnabled": true,
      "soundType": "system",
      "voice": "System Voice",
      "logPermissions": true,
      "keywords": [
        "permission",
        "allow",
        "deny",
        "grant",
        "authorize",
        "access",
        "enable",
        "disable",
        "consent",
        "approve",
        "reject",
        "confirm"
      ]
    }
  }
}